<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.pvetec.inspectra.controller.AboutDialogController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>

    <!-- 应用程序徽标 -->
    <ImageView fx:id="logoImageView" fitHeight="100.0" fitWidth="100.0" preserveRatio="true"/>

    <!-- 应用程序名称 -->
    <Text fx:id="appNameText" text="Inspectra" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <!-- 版本信息 -->
    <Text fx:id="versionText" text="Version 1.0.0" style="-fx-font-size: 18px;"/>

    <!-- 应用描述 -->
    <Text fx:id="descriptionText" text="Inspectra is an advanced inspection tool for various applications."/>

    <!-- 版权信息 -->
    <Text fx:id="copyrightText" text="© 2024 PveTec. All rights reserved."/>

    <!-- 联系方式 -->
    <Text fx:id="contactText" text="For support, contact: support@pvetec.com"/>
</VBox>